<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/image"
        android:src="@drawable/tuwaiq_logo"/>

    <LinearLayout
        android:layout_marginStart="4dp"
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:background="@color/purple_200"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/text1"
        android:layout_alignBottom="@id/text3"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, welcome to"
        android:textSize="16sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuwaiq Academy"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/text1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="trining and more"
        android:textColor="@color/purple_700"
        android:layout_below="@id/text2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
       android:layout_above="@id/text2022"
        android:background="@color/teal_200"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="What We Offer"
                android:textSize="25sp"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="Specialized in Training"
                android:textSize="25sp"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="What's included"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Multi training experiencese."
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="* Bootcamps."
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="* Workshops."
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="* Webinars."
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Talks."
                android:textColor="@color/purple_700"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Details"
                android:textSize="25sp"
                android:textColor="@color/purple_700"
                android:layout_margin="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:text="https://bootcamp.sa/"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:text="https://satr.codes/"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:text="Riyadh"/>

        </LinearLayout>

    </ScrollView>













<TextView
    android:layout_margin="4dp"
    android:id="@+id/text2022"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:text=" @ 2022 Twaiq Academy. All rights reserved."
    android:textColor="@color/purple_700"
    android:gravity="center"
    android:textSize="16dp"/>
</RelativeLayout>